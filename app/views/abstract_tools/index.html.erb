<main class="abstract-tools">
  <section>
  </section>

  <article>
    <h2>Pick a Tool to Rent </h2>
    <%= button_to "Sign up to start renting tools!", new_user_registration_path if !user_signed_in? %>

    <ul class="tool-div">
      <% @available_abstract_tools.each do |ab_tool| %>
        <li>
          <%= link_to abstract_tool_path(ab_tool) do %>
            <%= svg ab_tool.name %>
            <h4><%= ab_tool.name %></h4>
        <% end %>
        </li>
      <% end %>
    </ul>

  </article>

  <aside>
    <%= render '/search/search' %>
  </aside>
</main>