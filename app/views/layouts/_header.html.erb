<header>
  <a href="/"><img class='logo' src="/assets/shedsharing-logo.png"></a>
  <nav>
    <ul>
      <li><%= link_to '<< Back', :back, class: "back-button" %></li>
      <li><%= link_to "Rent a Tool", abstract_tools_path %></li>
      <% if user_signed_in? %>
        <li>Hello, <%= current_user.username %></li>
        <li><%= link_to "Dashboard", dashboard_path(current_user), method: :get %></li>
        <li><%= link_to "Logout", destroy_user_session_path, method: :delete %></li>
      <% else %>
        <li><%= link_to "Login", "#login-modal", "data-toggle" => "modal" %></li>
        <li><%= link_to "Sign up", "#signup-modal", "data-toggle" => "modal" %></li>
      <% end %>
    </ul>
  </nav>
</header>
