<main class="tag-show">

  <section>
  </section>

  <article>
    <div class="row">
      <div class="col-xs-12 col-sm-8">
        <h2><%= @tag.name %></h2>
        <h3>Tools Related to this tag: </h3>
        <div>
          <ul class="list-group">
            <% @tag.tool_tags.each do |tt| %>
                <li class="list-group-item">
                  <%= svg(tt.tool.name) %><br>
                  <%= link_to "#{clean(tt.tool.name)}", tool_path(tt.tool), method: :get %> | $<%=tt.tool.base_price %> per day
                </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

  </article>

  <aside>
    <%= render '/search/search' %>
  </aside>

</main>