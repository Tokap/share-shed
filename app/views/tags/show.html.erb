<main class="tag-show">

  <section>
  </section>

  <article>
    <div class="row">
      <div class="col-xs-12">
        <h2><%= @tag.name %></h2>
        <h3>Tools Related to this tag: </h3>
        <div>
          <ul class="list-group">
            <% @tag.tool_tags.each do |tt| %>
              <li class="list-group-item">
                <%= link_to tool_path(tt.tool), method: :get do %>
                  <%= svg(tt.tool.name) %><br>
                  <span><%= "#{clean(tt.tool.name)}" %></span> |
                   $<%=tt.tool.base_price %> per day
                <% end %>
              </li>
            <% end %>
          </ul>
        </div>
      </div>
    </div>

  </article>

  <aside>
    <%= render '/search/search' %>
  </aside>

</main>
