<hgroup class="template">
  <h2>Search Results</h2>
</hgroup>

<main class="template">

  <section>
  </section>

  <article>
  <h3>We found the following related tools: </h3>
<% if @results.empty? %>
	<p> No matching results found! </p>
<% elsif @tag.class.to_s == "Tag" %>
	<% @results.each do |tt| %>
	<p><%= link_to "#{clean(tt.tool.name)}", tool_path(tt.tool), data: {turbolinks: false} %> | $<%= tt.tool.base_price %> each day </p>
	<% end %>
<% else %>
	<% @results.each do |tool| %>
		<p><%= link_to "#{clean(tool.name)}", tool_path(tool), data: {turbolinks: false} %> | $<%= tool.base_price %> each day </p>
	<% end %>
<% end %>
  </article>

  <aside>
  	<%= render '/search/search', top_5_tags: @top_5_tags%>
  </aside>

</main>

